
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<%@ page contentType="text/html; charset=GBK" language="java" errorPage="" %>  
<%
	String path = request.getContextPath();
	String basePath = request.getScheme() + "://" + request.getServerName() + ":" + request.getServerPort() + path + "/";
	String username = (String) request.getSession().getAttribute("username");
 %>
<%@taglib prefix="s" uri="/struts-tags"%>  
<html xmlns="http://www.w3.org/1999/xhtml"> 
  <head>
    
    <title>新增书籍</title>
    <style type="text/css">
	#table1 {
		width : 40%;
		margin-top: 50px;
	}
</style>
  </head>
  
  <body>
  	<center>
		<div style="margin-top: 30px;"> 	
		  	<h3>新增...</h3>
		</div> 
		<div style="margin-top:5px;float: right;">
			用户：<%=username %>，点击<a href="booksManage.jsp">这里</a>返回上一页
		</div>
		<div>
			<s:form action="bookAdd">
				<table id="table1" border=1>
					<tr>
						<td>书名：</td>
						<td><input type="text" name="booksInf.bookName"/></td>
					<tr>
					<tr>
						<td>作者：</td>
						<td><input type="text" name="booksInf.bookAuthor"/></td>
					</tr>
					<tr>
						<td>出版社：</td>
						<td><input type="text" name="booksInf.publisher"/></td>
					</tr>
					<tr>
						<td>价格：</td>
						<td><input type="text" name="booksInf.bookPrice"/></td>
					</tr>
					<tr>
						<td>类型：</td>
						<td><input type="text" name="booksInf.bookType"/></td>
					</tr>
					<tr>
						<td>简介：</td>
						<td><input type="text" name="booksInf.bookInfo"/></td>
					</tr>
					<tr align="center">
						<td colspan="2">
							<s:submit value="增加" theme="simple"/>
							<s:reset value="重置" theme="simple"/>
						</td>
					</tr>
				</table>
			</s:form>
		</div>
	</center>
  </body>
</html>
